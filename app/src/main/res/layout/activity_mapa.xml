<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".views.MapaActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:id="@+id/button_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="25dp"
            android:background="@color/white"
            android:gravity="center"
            android:src="@drawable/icon_settings" />

        <ImageView
            android:id="@+id/button_messages"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginTop="28dp"
            android:background="@color/white"
            android:gravity="center"
            android:src="@drawable/icon_chat" />

        <ImageView
            android:id="@+id/button_menu_geral"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginTop="28dp"
            android:background="@color/white"
            android:gravity="center"
            android:src="@drawable/icon_buttton_menugeral" />

        <ImageView
            android:id="@+id/button_badges"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginTop="28dp"
            android:background="@color/white"
            android:gravity="center"
            android:src="@drawable/icon_badges" />

        <ImageView
            android:id="@+id/button_login_perfil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginTop="28dp"
            android:background="@color/white"
            android:gravity="center"
            android:src="@drawable/icon_user" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mapa do evento"
            android:fontFamily="@font/susan_bold"
            android:textSize="24sp"
            android:textColor="@color/mainblue"
            android:layout_margin="20dp"
            android:textAlignment="center"/>

    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_mapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mapa_completo_pavilhao"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:layout_gravity="left"
                android:gravity="left" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

</LinearLayout>