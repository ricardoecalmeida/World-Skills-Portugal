    android:layout_margin="10dp">


    <ImageView
        android:id="@+id/image_concorrente_profissao"
        android:layout_width="50dp"
        android:layout_height="50dp" />


    <TextView
        android:id="@+id/text_nome_concorrente"
        android:layout_width="50dp"
        android:layout_height="20dp"
